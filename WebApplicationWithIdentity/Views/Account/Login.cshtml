@model WebApplicationWithIdentity.ViewModels.LoginViewModel

@{ 
    Layout = "../Shared/_AuthLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/css/authstyle.css">
</head>
<body>
    <div class="sign-form-container">
        <div class="background-image">
            <div class="sign-form">
                <div id="wrapper">
                    <h1>Sign In</h1>
                    <form class="box" method="post" asp-controller="Account" asp-action="Login"
                          asp-route-returnUrl="@Model.ReturnUrl" autocomplete="off">
                        <input type="text" asp-for="Email" id="email" placeholder="email" />
                        <input type="password" asp-for="Password" id="pass" placeholder="password" />
                        <span class="check-label"><input asp-for="RememberMe" />Remember me</span>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger text-white">
                                @Html.ValidationSummary()
                            </div>
                        }
                        <input type="submit" value="Login">
                        <span class="link-btn"><a asp-controller="Account" asp-action="Register">Sign up now</a></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
